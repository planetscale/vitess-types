version: v1
managed:
  enabled: true
  go_package_prefix:
    default: github.com/planetscale/vitess-types/gen/vitess/{{.Version}}
plugins:
  - name: go
    path: bin/protoc-gen-go
    out: gen/vitess/{{.Version}}
    opt:
      - paths=source_relative
  - name: go-vtproto
    path: bin/protoc-gen-go-vtproto
    out: gen/vitess/{{.Version}}
    opt:
      - paths=source_relative
      - features=marshal+unmarshal+size+pool
      - pool=github.com/planetscale/vitess-types/gen/vitess/{{.Version}}/query.Row
      - pool=github.com/planetscale/vitess-types/gen/vitess/{{.Version}}/query.BoundQuery
      - pool=github.com/planetscale/vitess-types/gen/vitess/{{.Version}}/binlogdata.VStreamRowsResponse
  - name: connect-go
    path: bin/protoc-gen-connect-go
    out: gen/vitess/{{.Version}}
    opt:
      - paths=source_relative
